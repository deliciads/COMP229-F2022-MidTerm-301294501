<% include ../partials/header.ejs %>

<!-- MAIN CONTENT -->
<div class="container">
  <div class="row">
    <div class="col-md-offset-3 col-md-6">
      <h1><%= title %></h1>
      <form class="form" method="post">
        <div class="form-group">
          <label for="carnameTextField">Car Name</label>
          <input
            type="text"
            class="form-control"
            id="carnameTextField"
            placeholder="Car Name"
            name="carname"
            value="<%= car.carname %>"
            required
          />
        </div>

        <div class="form-group">
          <label for="categoryTextField">Category</label>
          <input
            type="text"
            class="form-control"
            id="categoryTextField"
            placeholder="Car Category"
            name="category"
            value="<%= car.category %>"
            required
          />
        </div>

        <div class="form-group">
          <label for="ModelTextField">Car Model</label>
          <input
            type="text"
            class="form-control"
            id="modelTextField"
            placeholder="Car Model"
            name="carmodel"
            value="<%= car.carmodel %>"
            required
          />
        </div>

        <div class="form-group">
          <label for="priceTextField">Price</label>
          <input
            type="text"
            class="form-control"
            id="priceTextField"
            placeholder="Car Price"
            name="price"
            value="<%= car.price %>"
            required
          />
        </div>

        <button type="submit" class="btn btn-primary">
          <i class="fa fa-check-square-o"></i> Submit
        </button>
        <a href="/cars" class="btn btn-warning"
          ><i class="fa fa-undo"></i> Cancel</a
        >
      </form>
    </div>
  </div>
</div>

<% include ../partials/footer.ejs %>
