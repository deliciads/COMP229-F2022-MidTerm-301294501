<% include ../partials/header.ejs %>

<!-- MAIN CONTENT -->
<div class="container">
  <div class="row">
    <div class="col-md-offset-1 col-md-10">
      <h3>Favourite Cars List</h3>
      <!-- ------------------------ -->
      <!-- FIX THE ADD BUTTON BELOW -->
      <!-- ------------------------ -->
      <a href="/cars/add" class="btn btn-primary" role="button"
        ><i class="fa fa-plus"></i> Add a car</a>

      <br/>
      <div class="table-responsive">
        <table class="table table-bordered table-striped table-hover">
          <thead>
            <tr>
              <th class="text-center">Car Name</th>
              <th class="text-center">Car Model</th>
              <th class="text-center">Category</th>
              <th class="text-center">Price</th>
              <th class="text-center"></th>
              <th class="text-center"></th>
            </tr>
          </thead>
          <tbody>

            <!-- Template Row -->
            <% for (let count = 0; count < Cars.length; count++) { %>
            <tr>
              <td class="text-center"><%= Cars[count].carname %></td>
              <td class="text-center"><%= Cars[count].category %></td>
              <td class="text-center"><%= Cars[count].carmodel %></td>
              <td class="text-center"><%= Cars[count].price %></td>

              <td class="text-center">
                <a href="/cars/details/<%= Cars[count]._id %>" class="btn btn-primary btn-sm">
                <i class="fas fa-pencil-alt"></i> Edit</a>
              </td>
              <td class="text-center col-1">
                <a href="/cars/delete/<%= Cars[count]._id %>" class="btn btn-warning btn-sm">
                <i class="fas fa-trash"></i> Delete</a>
              </td>
            </tr>
            <% } %>
          </tbody>
        </table>
      </div>
     
     
    </main>
      <div class="col-md-offset-1 col-md-10 text-center">
        <ul class="pagination pagination-lg pager" id="myPager"></ul>
      </div>
      
    </div>
  </div>
</div>

<% include ../partials/footer.ejs %>
